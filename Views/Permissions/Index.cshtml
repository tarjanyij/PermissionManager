@model IEnumerable<PermissionManager.Models.Permission>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BeginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApproverID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponsibleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rights)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PermissionPaper)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BeginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApproverID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponsibleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.PersonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rights.RightsID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionPaper.PermissionPaperID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PermissionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PermissionID">Details</a> |
